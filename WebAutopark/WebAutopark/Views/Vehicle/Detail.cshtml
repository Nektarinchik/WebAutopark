@model WebAutopark.ViewModels.Vehicle.VehicleDetailViewModel

@{
    ViewData["Title"] = "Vehicle Overview";
}

<div class="text-center">
    <h2 class="display-6">Vehicle Overview</h2>
    <table class="table table-hover">
      <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Value</th>
          </tr>
          <tbody>
            <tr class="table-active">
                <td>Vehicle Type</td>
                <td>
                    Name: @Model.VehicleType.Name<br />
                    Tax Coefficient: @Model.VehicleType.TaxCoefficient.ToString()
                </td>
            </tr>
            <tr class="table-active">
                <td>Model</td>
                <td>@Model.Model</td>
            </tr>
            <tr class="table-active">
                <td>Registration Number</td>
                <td>@Model.RegistrationNumber</td>
            </tr>
            <tr class="table-active">
                <td>Weight</td>
                <td>@Model.Weight</td>
            </tr>
            <tr class="table-active">
                <td>Year</td>
                <td>@Model.Year</td>
            </tr>
            <tr class="table-active">
                <td>Mileage</td>
                <td>@Model.Mileage</td>
            </tr>
            <tr class="table-active">
                <td>Color</td>
                <td>@Model.Color.ToString()</td>
            </tr>
            <tr class="table-active">
                <td>Fuel Consumption</td>
                <td>@Model.FuelConsumption</td>
            </tr>
            <tr class="table-active">
                <td>Volume</td>
                <td>@Model.Volume</td>
            </tr>
            <tr>
                <td colspan="2"><a asp-controller="Vehicle" asp-action="Update" asp-route-vehicleId="@Model.VehicleId">Update</a></td>
            </tr>
          </tbody>
      </thead>
    </table>
    <p>
        <a asp-controller="Vehicle" asp-action="Index">Back To Vehicle List</a>
    </p>
</div>
